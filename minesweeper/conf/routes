# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.gameHomepage()
GET     /gui                        controllers.HomeController.gameGui()
GET     /tui                        controllers.HomeController.gameTui()
GET     /diff/:diff                 controllers.HomeController.setDifficulty(diff: String)
GET     /uncover/:x/:y              controllers.HomeController.uncoverField(x: Int, y: Int)
GET     /flag/:x/:y                 controllers.HomeController.flagField(x: Int, y: Int)
GET     /undo                       controllers.HomeController.undo()
GET     /restart                    controllers.HomeController.restart()
GET     /saveGame                   controllers.HomeController.saveGame()
GET     /loadGame                   controllers.HomeController.loadGame()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)